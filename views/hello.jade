doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')
    title 1 Col Portfolio - Start Bootstrap Template
    // Latest compiled and minified CSS
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
    // Optional theme
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css')
    link(rel='stylesheet', href='css/style.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    // Latest compiled and minified JavaScript
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js')
    script(src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/1.3.6/socket.io.js")


    // HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //if lt IE 9
      script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
      script(src='https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js')
  body
    .container
      .header.clearfix
        nav
          ul.nav.nav-pills.pull-right
            li.active(role='presentation')
              a(href='#') Home
            li(role='presentation')
              a(href='../track' id='track') Track
            li(role='presentation')
              a(href='#') Campaign
            li(role='presentation')
              a(href='#') Profile
      // Page Content
      .container
        // Page Heading
        .row
          .col-lg-12(style='background-image: url(assets/pic01.jpg)')
            h1.page-header.header
              | Immly
              small
                p Immigrants build nations
        // /.row

        each result in returnResults.Results
          .row
            .col-md-2
              a(href='#')
                img.img-responsive.vcenter(src='#{result.fileURL}', alt='')
            .col-md-5
              h3 !{result.sourceName}
              h4 !{result.title}
              p
                | !{result.summary}
              a.btn.btn-primary(href='#{result.link}')
                | View Full Article 
                span.glyphicon.glyphicon-chevron-right
          hr


        // Pagination
        - var totalPages = returnResults.totalPages
        - var currentPage = returnResults.currentPage
        -var p = 1
        .row.text-center
          .col-lg-12
            ul.pagination
              while p <= totalPages
                li(class = (p == currentPage ? 'active' : '' ))
                  a(href='../parse?p='+p) #{p}
                - p++

        h1= header
        .container#tweet-container
        script.
          var socket = io.connect(window.location.hostname);
          socket.on('connection', function () {
            console.log('Connected!');
          });

          socket.on('tweets', function (tweet) {
            var html = '<div class="row"><div class="col-md-6 col-md-offset-3 tweet"><a href="https://twitter.com/' + tweet.screen_name + '" target="_blank"><img src="' + tweet.user_profile_image + '" class="avatar pull-left"/></a><div class="names"><span class="full-name">' + tweet.name + ' </span><span class="username">@' + tweet.screen_name + '</span></div><div class="contents"><span class="text">' + tweet.text + '</span></div></div></div>';
            $('#tweet-container').append(html);
          });

        // /.row
        // Footer
        footer
          .row
            .col-lg-12
              p Copyright Â© Your Website 2014
          // /.row
      // /.container
